{
  "darkMode": [
    "class"
  ],
  "theme": {
    "extend": {
      "colors": {
        "tiation-bg": {
          "primary": "#0a0a0a",
          "secondary": "#000000",
          "card": "#1a1a1a",
          "glass": "rgba(26, 26, 26, 0.9)"
        },
        "tiation-text": {
          "primary": "#ffffff",
          "secondary": "#b0b0b0",
          "muted": "#808080",
          "accent": "#e0e0e0"
        },
        "tiation-neon": {
          "cyan": "#00ffff",
          "magenta": "#ff00ff",
          "electric": "#00ff41",
          "purple": "#8000ff",
          "blue": "#0080ff"
        }
      },
      "backgroundImage": {
        "tiation-gradient-primary": "linear-gradient(135deg, #00ffff 0%, #0080ff 50%, #8000ff 100%)",
        "tiation-gradient-secondary": "linear-gradient(45deg, #00ff41 0%, #00ffff 50%, #ff00ff 100%)",
        "tiation-gradient-accent": "linear-gradient(90deg, #ff00ff 0%, #00ffff 100%)"
      },
      "boxShadow": {
        "tiation-glow-cyan": "0 0 20px rgba(0, 255, 255, 0.5)",
        "tiation-glow-magenta": "0 0 20px rgba(255, 0, 255, 0.5)",
        "tiation-glow-electric": "0 0 30px rgba(0, 255, 65, 0.4)",
        "tiation-glow-soft": "0 0 40px rgba(0, 255, 255, 0.2)",
        "tiation-glow-intense": "0 0 60px rgba(0, 255, 255, 0.8)"
      },
      "keyframes": {
        "tiation-glow": {
          "0%, 100%": {
            "boxShadow": "0 0 20px rgba(0, 255, 255, 0.5)"
          },
          "50%": {
            "boxShadow": "0 0 60px rgba(0, 255, 255, 0.8)"
          }
        },
        "tiation-float": {
          "0%, 100%": {
            "transform": "translateY(0px)"
          },
          "50%": {
            "transform": "translateY(-20px)"
          }
        },
        "tiation-pulse": {
          "0%, 100%": {
            "opacity": "0.3"
          },
          "50%": {
            "opacity": "0.7"
          }
        }
      },
      "animation": {
        "tiation-glow": "tiation-glow 2s ease-in-out infinite alternate",
        "tiation-float": "tiation-float 6s ease-in-out infinite",
        "tiation-pulse": "tiation-pulse 4s ease-in-out infinite alternate"
      }
    }
  }
}