# Netmaker Configuration File
# Domain configuration
NM_DOMAIN=localhost
NETMAKER_BASE_DOMAIN=localhost
FRONTEND_URL=http://localhost:8080

# Server Configuration
SERVER_HOST=localhost
SERVER_HOST6=
SERVER_API_CONN_STRING=api.localhost:443
SERVER_HTTP_HOST=api.localhost
API_PORT=8081

# Database
DATABASE=sqlite

# Authentication
MASTER_KEY=secretkey

# Message Queue
MQ_USERNAME=netmaker
MQ_PASSWORD=password
SERVER_BROKER_ENDPOINT=ws://mq:1883

# Image Tags
SERVER_IMAGE_TAG=v1.0.0
UI_IMAGE_TAG=v1.0.0

# DNS
COREDNS_ADDR=localhost
DNS_MODE=on
MANAGE_DNS=on

# Security
CORS_ALLOWED_ORIGIN=*
DISPLAY_KEYS=on
DISABLE_REMOTE_IP_CHECK=off

# Logging
VERBOSITY=1
DEBUG_MODE=off

# Features
TELEMETRY=off
METRICS_EXPORTER=off
PROMETHEUS=off

# Network Configuration
STUN_SERVERS=stun1.l.google.com:19302,stun2.l.google.com:19302
