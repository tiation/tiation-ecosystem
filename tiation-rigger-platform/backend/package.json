{
  "name": "tiation-rigger-platform-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade backend API for Tiation Rigger Platform",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "type-check": "tsc --noEmit",
    "build": "npm run build:backend",
    "build:backend": "tsc",
    "security-audit": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t tiation-rigger-backend .",
    "docker:run": "docker run -p 3000:3000 tiation-rigger-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "stripe": "^12.18.0",
    "twilio": "^4.15.0",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "aws-sdk": "^2.1445.0",
    "redis": "^4.6.7",
    "pg": "^8.11.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "rigger",
    "construction",
    "mining",
    "crane-operator",
    "b2b",
    "saas",
    "enterprise"
  ],
  "author": "Tiation Team <tiatheone@protonmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiation/tiation-rigger-platform.git"
  },
  "bugs": {
    "url": "https://github.com/tiation/tiation-rigger-platform/issues"
  },
  "homepage": "https://tiation-rigger.github.io"
}
